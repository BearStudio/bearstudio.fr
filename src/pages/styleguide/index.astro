---
import { Button } from '@/components/ui/button';
import { Scratch } from '@/components/ui/scratch';
import RootLayout from '@/layouts/RootLayout.astro';
---

<RootLayout>
  <div class="container mx-auto flex flex-col gap-8 p-8">
    <h1 class="font-heading text-4xl font-bold">Styleguide</h1>

    <!-- -->

    <div class="flex flex-col gap-4">
      <h2 class="font-heading text-xl font-bold">Buttons</h2>
      <div class="flex flex-wrap gap-4">
        <Button>default</Button>
        <Button variant="secondary">secondary</Button>
        <Button variant="ghost">ghost</Button>
        <Button variant="link">link</Button>
      </div>
      <div class="bg-hero flex flex-wrap gap-4 rounded-xl p-4">
        <Button>default</Button>
        <Button variant="secondaryOnDark">secondaryOnDark</Button>
        <Button variant="ghostOnDark">ghost</Button>
        <Button variant="linkOnDark">link</Button>
      </div>
    </div>

    <!-- -->

    <div class="flex flex-col gap-4">
      <h2 class="font-heading text-xl font-bold">Scratch</h2>
      <Scratch />
      <Scratch className="text-accent" />
    </div>

    <!-- -->
  </div>
</RootLayout>
