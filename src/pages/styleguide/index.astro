---
import HeadImage from '@/components/blog/head-image.astro';
import { Button } from '@/components/ui/button';
import { Scratch } from '@/components/ui/scratch';
import RootLayout from '@/layouts/root-layout.astro';
---

<RootLayout>
  <div class="container mx-auto flex flex-col gap-8 p-8">
    <h1 class="font-heading text-4xl font-bold">Styleguide</h1>

    <!-- -->

    <div class="flex flex-col gap-4">
      <h2 class="font-heading text-xl font-bold">Buttons</h2>
      <div class="flex flex-wrap gap-4">
        <Button>default</Button>
        <Button variant="secondary">secondary</Button>
        <Button variant="ghost">ghost</Button>
        <Button variant="link">link</Button>
      </div>
      <div
        class="bg-hero text-hero-foreground flex flex-wrap gap-4 rounded-xl p-4"
      >
        <Button>default</Button>
        <Button variant="secondaryOnDark">secondaryOnDark</Button>
        <Button variant="ghostOnDark">ghostOnDark</Button>
        <Button variant="link">link</Button>
      </div>
    </div>

    <!-- -->

    <div class="flex flex-col gap-4">
      <h2 class="font-heading text-xl font-bold">Scratch</h2>
      <Scratch />
      <Scratch className="text-accent" />
    </div>

    <!-- -->
    <div class="flex gap-4">
      <HeadImage
        src="https://images.unsplash.com/photo-1551792714-9a8b35338793?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8YmVhcnxlbnwwfHwwfHx8MA%3D%3D"
        text="UI/UX Design"
      />
      <HeadImage
        src="https://plus.unsplash.com/premium_photo-1661963661518-5d1e2f4d8b81?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MXx8YmVhcnN8ZW58MHx8MHx8fDA%3D"
        text="Front End Development"
      />
      <HeadImage
        src="https://images.unsplash.com/photo-1623584973952-182bcb43b8ad?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
        text="Mobile App Development"
      />
    </div>
  </div>
</RootLayout>
