---
import { lunalink } from '@bearstudio/lunalink';

import {
  BreadcrumbBase,
  BreadcrumbItem,
  BreadcrumbPage,
} from '@/components/ui/breadcrumb';
import Hero from '@/components/ui/hero.astro';
import { parseAstroLocale } from '@/i18n/utils';
import MainLayout from '@/layouts/main-layout.astro';
import { ROUTES } from '@/routes.gen';
---

<MainLayout>
  <Hero>
    <div
      class="flex flex-col items-center justify-center gap-2 text-center lg:gap-4"
    >
      <BreadcrumbBase locale={parseAstroLocale(Astro.currentLocale)}>
        <BreadcrumbItem>
          <BreadcrumbPage>Prestations </BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbBase>
      <h1
        class="font-heading text-accent max-w-[20ch] text-4xl leading-tight font-bold text-balance md:text-5xl"
      >
        Nos prestations
      </h1>
      <p class="max-w-[60ch] text-sm text-balance opacity-80">
        Conception UX et d√©veloppement TypeScript pour des applis web & mobile
        performantes.
      </p>
    </div>
  </Hero>
  <div>
    <a href={lunalink(ROUTES.fr.prestations['ux-design'].__path, {})}>
      UX Design
    </a>
  </div>
</MainLayout>
