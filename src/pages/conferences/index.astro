---
import { lunalink } from '@bearstudio/lunalink';

import { getConferencesCollection } from '@/lib/conferences';
import MainLayout from '@/layouts/MainLayout.astro';
import { ROUTES } from '@/routes.gen';

const conferences = await getConferencesCollection();
---

<MainLayout>
  <div class="mx-auto w-full max-w-screen-xl px-4">
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {
        conferences.map((person) => (
          <a
            href={lunalink(ROUTES.conferences[':id'].__path, { id: person.id })}
          >
            {person.data.title}
          </a>
        ))
      }
    </div>
  </div>
</MainLayout>
