---
import { Image } from 'astro:assets';

import type { ImageMetadata } from 'astro';

import Prose from '@/components/prose.astro';

interface Props {
  image: ImageMetadata;
  title: string;
}

const { image, title } = Astro.props;
---

<Prose class="prose-sm prose-p:my-0.5 flex flex-col">
  <div class="bg-brand-100 border-brand-200 -mb-4 flex rounded-md border">
    <Image src={image} width={640} height={360} alt="" class="m-auto!" />
  </div>
  <h3>{title}</h3>
  <slot />
</Prose>
