---
import {
  PiCaretDownBold,
  PiEnvelopeBold,
  PiTranslateDuotone,
} from 'react-icons/pi';

import { cn } from '@/lib/tailwind/utils';
import { Button, buttonVariants } from '@/components/ui/button';
import { Logo } from '@/components/ui/logo';
import { Scratch } from '@/components/ui/scratch';

interface Props {
  contentClassName?: string;
}
const { contentClassName } = Astro.props;
---

<div class="bg-hero text-hero-foreground relative z-0 flex flex-col">
  <!-- Mobile Top Actions -->
  <div
    class="relative z-10 mx-auto flex w-full max-w-5xl justify-between p-4 lg:hidden"
  >
    <Button variant="ghostOnDark" className="opacity-80 hover:opacity-100">
      <PiTranslateDuotone className="opacity-60" />
      Fran√ßais
      <PiCaretDownBold className="opacity-60" />
    </Button>
    <a
      href="#"
      class={cn(
        buttonVariants({ variant: 'ghostOnDark' }),
        'opacity-80 hover:opacity-100'
      )}
    >
      <PiEnvelopeBold className="opacity-60" />
      Nous contacter
    </a>
  </div>

  <!-- Content -->
  <div
    class={cn(
      'relative z-10 flex min-h-[40vh] flex-1 flex-col gap-10 overflow-hidden pt-8 pb-24 lg:min-h-[50vh] lg:pt-32',
      contentClassName
    )}
  >
    <div
      class="mx-auto flex w-full max-w-5xl flex-1 flex-col justify-center gap-6 px-4 lg:px-6"
    >
      <a href="/" class="lg:hidden">
        <Logo className="mx-auto w-38 sm:w-52" />
      </a>

      <slot />
    </div>
  </div>

  <!-- Background -->
  <img
    src="https://images.unsplash.com/44/MIbCzcvxQdahamZSNQ26_12082014-IMG_3526.jpg?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1470"
    alt=""
    class="absolute inset-0 z-0 h-full w-full object-cover opacity-30 mix-blend-overlay grayscale"
  />
  <div class="from-hero/90 to-hero/0 absolute inset-0 z-0 bg-linear-to-b"></div>

  <!-- Scratch -->
  <div class="text-background relative z-10 -mt-8 -mb-px flex">
    <Scratch className="" />
    <Scratch className="max-lg:hidden" />
    <Scratch className="max-2xl:hidden" />
  </div>
</div>
